<script>

    let radio = document.querySelectorAll('.radio');
    let Lh = document.querySelectorAll('.li_h');
    let success = document.querySelectorAll('.success');
    for (let i = 0; i < radio.length; i++) {
        radio[i].addEventListener('click', () => {
            radio[i].style['animation-name'] = 'radio'
            radio[i].style['animation-duration'] = '1s'
            console.log(Lh[i]);
            Lh[i].style['animation-name'] = 'success'
            Lh[i].style['animation-duration'] = '2s'
            radio[i].style.display = 'none'
            Lh[i].className = 'active'
            success[i].style['animation-name'] = 'success'
            success[i].style['animation-duration'] = '2s'
            success[i].style.display = 'block'
        })

    }

</script>

